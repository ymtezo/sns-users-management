# SNS User Management API with Ruby

source 'https://rubygems.org'

ruby '~> 3.2.0'

# Web framework
gem 'sinatra', '~> 4.0'
gem 'sinatra-contrib', '~> 4.0'
gem 'puma', '~> 6.0'
gem 'rackup', '~> 2.0'

# Database
gem 'sqlite3', '~> 1.6'
gem 'activerecord', '~> 7.0'

# JSON handling
gem 'json', '~> 2.6'

# Notion API integration
gem 'httparty', '~> 0.21'

# CORS support
gem 'rack-cors', '~> 2.0'

# Development
group :development do
  gem 'rerun', '~> 0.14'
end
